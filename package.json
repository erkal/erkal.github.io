{
    "name": "erkal.github.io",
    "author": "Aziz Erkal Selman",
    "description": "",
    "version": "1.0.0",
    "license": "MIT",
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "postinstall": "elm-tooling install",
        "prebuild": "elm-tooling install",
        "watch-elm": "npx elm-watch hot",
        "dev": "node ./scripts/prebuild.js && npx run-pty % npm run watch-elm % node ./scripts/generate-index-for-dev.js % open http://localhost:8000/",
        "build-elm": "npx elm-watch make",
        "build": "node ./scripts/prebuild.js && npm run build-elm && node ./scripts/generate-index-for-build.js",
        "deploy": "npm run build && gh-pages -d build"
    },
    "devDependencies": {
        "@lydell/elm-json-darwin-arm64": "^0.2.13-0",
        "cors": "^2.8.5",
        "elm": "^0.19.1-6",
        "elm-tooling": "^1.15.1",
        "elm-watch": "^2.0.0-beta.6",
        "express": "^4.21.2",
        "gh-pages": "^6.1.0",
        "http-proxy-middleware": "^3.0.3",
        "inquirer": "^12.1.0",
        "prettier": "^3.5.3",
        "run-pty": "^4.1.0",
        "shelljs": "^0.8.5"
    }
}
